@page
@model CogutTaste.Pages.Admin.FoodType.IndexModel

@{
    ViewData["Title"] = "FoodType Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!--
hem foodtype hem de category nin get methodları javascript kullandığından bu sayfaların 
    page modelleri aslında islevsiz.. bu ndenle daha sonra yaptığımız menuitem de page modelsiz 
    olarak index razor sayfası ürettik..    
-->

<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Food Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Create New</a>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.FoodTypeObj.Name)
                </th>
                <!--
                     <th>Food Type Name</th>
                -->

                
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/foodtype.js"></script>
}

